{
  "manifest_version": 2,

  "name": "ShopeeCheckList",
  "description": "Shopee Check List.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "scripts": ["background.js", "jquery-3.1.0.min.js"],
    "persistent" : true  
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "notifications",
    "https://seller.shopee.tw/portal/sale/shipment/*",
    "https://seller.shopee.tw/api/v3/*"
  ]
}
