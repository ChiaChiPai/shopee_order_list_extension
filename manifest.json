{
  "manifest_version": 3,

  "name": "ShopeeCheckList",
  "description": "Shopee Check List.",
  "version": "1.01",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "https://seller.shopee.tw/portal/sale/shipment/*",
    "https://seller.shopee.tw/api/v3/*"
  ]
}
